<p id="notice"><%= notice %></p>

<h1>Listing People</h1>

<table>
  <thead>
    <tr>
      <th><%= t "people.firstname" %></th>
      <th><%= t "people.middlename" %></th>
      <th><%= t "people.lastname" %></th>
      <th><%= t "people.title" %></th>
      <th><%= t "people.sex" %></th>
      <th><%= t "people.salutation" %></th>
      <th><%= t "people.password" %></th>
      <th><%= t "people.roles" %></th>
      <th><%= t "people.status" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.firstname %></td>
        <td><%= person.middlename %></td>
        <td><%= person.lastname %></td>
        <td><%= person.title %></td>
        <td><%= t "people.sexes.#{person.sex}"  %></td>
        <td><%= person.salutation %></td>
        <td><%= person.password %></td>
        <td><%= person.roles %></td>
        <td><%= person.status %></td>
        <td><%= link_to t( "forms.show" ), person %></td>
        <td><%= link_to t( "forms.edit" ), edit_person_path(person) %></td>
        <td><%= link_to t( "forms.destroy" ), person, method: :delete, data: { confirm: t( "forms.are_you_sure" ).concat("?") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

